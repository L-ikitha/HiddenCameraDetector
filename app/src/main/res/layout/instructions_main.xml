<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1D1D1D">

    <ImageView
        android:id="@+id/instructions_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@mipmap/instructions" />


    <TextView
        android:id="@+id/instructions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/instructions_pic"
        android:background="@color/colorPrimary"
        android:padding="15dp"
        android:text="INSTRUCTIONS"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/instructions_title"
        android:padding="15dp"
        android:scrollbars="none">


        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/content_activity_instructions"
            android:textSize="18dp"
            android:textColor="@color/white"/>

    </ScrollView>

</LinearLayout>