<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bathroom_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TipsContent.Bathroom"
    android:background="#1D1D1D">


    <ImageView
        android:id="@+id/bathroom_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@mipmap/bathroom" />


    <TextView
        android:id="@+id/bathroom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bathroom_pic"
        android:background="@color/colorAccent"
        android:padding="15dp"
        android:text="@string/title_activity_bathroom"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bathroom_title"
        android:padding="15dp"
        android:scrollbars="none">


        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/content_activity_bathroom"
            android:textSize="18dp"
            android:textColor="@color/white"/>

    </ScrollView>

</LinearLayout>